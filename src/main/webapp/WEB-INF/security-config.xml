<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
xmlns:beans="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">


	<http use-expressions="false">
		<intercept-url pattern="/api/news/**"
			access="ROLE_ADMIN" method="DELETE" />
		<intercept-url pattern="/api/news"
			access="ROLE_ADMIN" method="POST" />
		<intercept-url pattern="/api/news"
			access="ROLE_ADMIN" method="PUT" />
		<intercept-url pattern="/api/news/deleteList"
			access="ROLE_ADMIN" method="POST" />
	<http-basic />
	<csrf disabled="true"/>
	</http>

	<authentication-manager>
		
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource" />
		</authentication-provider>

	</authentication-manager>
<beans:bean id ="passwordEncoder" 
      class = "org.springframework.security.crypto.password.NoOpPasswordEncoder" 
      factory-method = "getInstance">
   </beans:bean> 
 <beans:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
         <beans:property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
         <beans:property name="url" value="jdbc:oracle:thin:@//localhost:1521/ORCLCDB.localdomain" />
         <beans:property name="username" value="c##maria"/>
         <beans:property name="password" value="1234"/>
         <beans:property name="initialSize" value="5" />
         <beans:property name="maxActive" value="5" />
    </beans:bean>    
</beans:beans>